<%- include('./base/header.ejs') %>
<div class="container" style="margin-top: 50px;"></div>
    <div class="row" style="width:100%; padding: 1.3%;">
        <h4 class="text-centre my-3" style="text-align: center;">Users List</h4>
        <table class="table table-striped-columns table-hover" style="text-align: center;">
            <thead class="table-dark">
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Country</th>
                    <th>Email</th>
                    <th>Mobile No</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <% users.forEach((users)=>{%>
                <tr>
                    <td><%= users.firstName%></td>
                    <td><%= users.lastName%></td>
                    <td><%= users.country%></td>
                    <td><%= users.email%></td>
                    <td><%= users.mobileNo%></td>
                    <td>
                        <a href="/edit/user/page/<%= users._id %>" class="btn btn-success rounded-1">Edit</a>
                        <a href="/delete/user/page/<%= users._id %>" class="btn btn-danger rounded-1">Delete</a>
                    </td>
                </tr>
           <% }) %>
        </table>
    </div>
</div>
<%- include('./base/footer.ejs') %>